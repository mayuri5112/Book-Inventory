

<h1 class="mb-4 mt-5">Login</h1>

<% if(errorMessage){ %>
  <div class="alert alert-danger" role="alert">
      <%= errorMessage %>
  </div>
  <% } %>

<form action="/login" method="post">
    
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
      <!-- <small id="emailHelp" class="form-text text-muted mb-3">We'll never share your email with anyone else.</small> -->
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" name="password" class="form-control mb-3" id="password" placeholder="Password">
    </div>
